
@{
    ViewBag.Title = "MotDePasseOubliee";
    Layout = "~/Views/Shared/_InitialLayout.cshtml";
}



<style>
    body {
        background-color: #fbbb29;
    }

</style>
<div class="row">
    <div class="col-12 col-sm-12 col-md-1 col-lg-3">
    </div>
    <div class="col-12 col-sm-12 col-md-10 col-lg-6">

        <div style="background-color:#fbbb29;padding-top:10px;padding-left:60px;padding-right:60px; height:350px">
            <div id="loginForm" style="margin: 0 auto;height:347px;">
                <div class="textBox" style="text-align:center;">
                    <span style="text-align: center;color:white;font-size:19px;text-align:center; font-weight:bold;"> Vous avez oublié votre mot de passe ? </span> <br /> <br />
                    <span style="text-align: center;color:white;font-size:19px;text-align:center;font-size:15px;">Saisissez votre courriel </span> <br />
                    <span style="text-align: center;color:white;font-size:19px;text-align:center;font-size:13px;"> lié à votre compte, et nous vous enverrons les instructions pour en créer un nouveau.</span> <br />
                </div>


                <br />
                <br />


                <div class="inputs">
                    <input class="emailInput" type="email" placeholder="Usager(Courriel)">  <br />
                    <div style="text-align:center;">
                        <input type="submit" class="btn btn-danger submitInput" value="Soumettre" data-toggle="modal" data-target="#annonceModal" onclick="sendPassword()">
                    </div>
                </div>

            </div>
        </div>



    </div>

    <div class="col-12 col-sm-12 col-md-1 col-lg-3"></div>


</div>

<!-- Modal -->
<div id="annonceModal" class="modal modal-wide fade" role="dialog">
    <div class="modal-dialog oublieMotDePasse">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="display:none;">
                <button type="button" class="close" data-dismiss="modal" onclick="removeBackdrop()">&times;</button>
                <h4 class="modal-title">Calendrier des rendez Vous</h4>
            </div>
            <div class="modal-body">
                <p style="font-weight:bold;font-size:1.5vw;">Réinitialiser le mot de passe </p>
                <span style="font-weight:bold;font-size:1vw;">Nous avons reçu votre demande </span> <br />
                <span>Un lien pour réinitialiser votre mot de passe a été envoyé par courriel à l'adresse renomnom@sviceInternet.ca</span> <br /> <br />
                <a href="@Url.Action("Connexion", "Compte")">Revenir à la page d'identification </a>
            </div>
            <div class="modal-footer" style="display:none;">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="removeBackdrop()">Fermer</button>
            </div>
        </div>

    </div>
</div>

<script>

    function sendPassword() {
        $.ajax({
            url: '../Compte/sendPassword',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                $('.modal-body').modal("show");
            },
            error: function (xhr, status) {
                alert(status);
            }
        });
    }
</script>
