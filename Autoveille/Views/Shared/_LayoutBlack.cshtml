<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AutoVeille Technologies</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.1/Chart.min.js" />
    <script src="~/Scripts/Chart.roundedBarCharts.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/LayoutBlack.css" rel="stylesheet" />
    <link href="~/Content/css/Dashboard.css" rel="stylesheet" />
    <link href="~/Content/css/InfoConcession.css" rel="stylesheet" />
    <link href="~/Content/css/Connexion.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.6.0/main.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.yacal.css" rel="stylesheet" />

    <script src="~/Scripts/flip.min.js"></script>
    <link href="~/Content/flip.min.css" rel="stylesheet" />



    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.typekit.net/unq0nxl.css">
    @*Jquery date picker styles*@
    @*<link href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" rel="stylesheet" />*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.structure.min.css" rel="stylesheet" />

    <style>
        /*.downMenu {
            text-align: right;
            margin-right: 55px;
        }*/

        .downMenu li {
            display: inline;
            color: white;
        }

            .downMenu li a {
                color: white;
            }

                .downMenu li a:hover {
                    font-size: 25px;
                    font-weight: bold;
                    color: #fbd72b;
                }

        #eventDiv {
            margin-right: 35px;
            text-align: center;
            font-size: 15px;
            font-family: Arial;
            font-stretch: extra-expanded;
        }

        .clientId {
            color: #fbbb29;
            font-size: 12px;
            font-weight: bold;
        }

        .rowClients {
            font-size: 12px;
        }


        .clientsTableHeader {
            color: white;
            background-color: black;
            height: 40px;
            font-size: 15px;
            font-weight: bold;
        }

        .clientsTable th {
            padding: 10px;
            text-align: left;
        }

        .clientsTable td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark " style="padding-bottom: 0px;">
        <a class="navbar-brand" href="#" style="vertical-align:central;">
            <img src="~/Content/Images/Layout/LogoAutoVeille_NEG.svg" height="40" width="300" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">English <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/dashboard/">Nom d'utilisateur  </a>
                </li>
                <li class="nav-item" id="hamIcon" style="border-left-width:0px;border-left-style: none;padding-bottom:16px;">
                    <a class="nav-link" onclick="displayMenu()">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>


    <div id="menu">
        <ul class="downMenu" style="padding-top: 10px;">
            <li>
                <a href="Dashboard">Tableau de Bord <span class="sr-only">(current)</span></a>
            </li>
            <li>
                <a href="#">Rappel </a>
            </li>
            <li>
                @Html.ActionLink("Gestionnaire d'appels", "InfoConcession", "Home", null, null)
            </li>
            <li>
                <a href="#"> Gestionnaire de rendez vous</a>
            </li>
            <li style="float:right;margin-right:-15px;">
                <a href="#"> Fermer la session  X</a>
            </li>
        </ul>

    </div>



    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AutoVeille Software Technologies </p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.yacal.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.6.0/main.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/locale/fr.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.6.0/locales-all.min.js"></script>
    @*Jquery datepicker plugin *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    
    @RenderSection("scripts", required: false)
    @RenderSection("css", required: false)


    <script type="text/javascript">
        function displayMenu() {
            var border = $('#hamIcon').css("border-left-width");
            if (border == "0px") {

                $('#hamIcon').css("border-left-width", "1px");
                $('#hamIcon').css("border-left-style", "solid");

                $('#eventDiv').css("border-top-width", "0px");
                $('#eventDiv').css("border-right-width", "0px");
            }
            else {
                $('#hamIcon').css("border-left-style", "none");
                $('#hamIcon').css("border-left-width", "0px");
                $('#eventDiv').css("border-top-width", "1px");
                $('#eventDiv').css("border-right-width", "1px");
            }
            $('#menu').toggle();
            //$('#menu').css("display","inline");
        }
    </script>

</body>
</html>
