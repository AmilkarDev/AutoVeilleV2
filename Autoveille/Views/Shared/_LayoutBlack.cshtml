    <script type="text/javascript">
        function displayMenu() {
            var border = $('#hamIcon').css("border-left-width");
            if (border == "0px") {

                $('#hamIcon').css("border-left-width", "1px");
                $('#hamIcon').css("border-left-style", "solid");

                $('#eventDiv').css("border-top-width", "0px");
                $('#eventDiv').css("border-right-width", "0px");
            }
            else {
                $('#hamIcon').css("border-left-style", "none");
                $('#hamIcon').css("border-left-width", "0px");
                $('#eventDiv').css("border-top-width", "1px");
                $('#eventDiv').css("border-right-width", "1px");
            }
            $('#menu').toggle();
            //$('#menu').css("display","inline");
        }


        function TickInit(tick) {
            // set language
            var locale = {
                YEAR_PLURAL: 'ANNEES',
                YEAR_SINGULAR: 'Ans',
                MONTH_PLURAL: 'Mois',
                MONTH_SINGULAR: 'MOIS',
                WEEK_PLURAL: 'Semaines',
                WEEK_SINGULAR: 'Semaine',
                DAY_PLURAL: 'JOURS',
                DAY_SINGULAR: 'Jour',
                HOUR_PLURAL: 'Heures',
                HOUR_SINGULAR: 'Heure',
                MINUTE_PLURAL: 'Minutes',
                MINUTE_SINGULAR: 'Minute',
                SECOND_PLURAL: 'Secondes',
                SECOND_SINGULAR: 'Seconde',
                MILLISECOND_PLURAL: 'Millisecondes',
                MILLISECOND_SINGULAR: 'Milliseconde'
            };

            for (var key in locale) {
                if (!locale.hasOwnProperty(key)) { continue; }
                tick.setConstant(key, locale[key]);
            }
            var dd = Tick.helper.date();
            console.log(dd);
            tick.value = [dd.getDate(), dd.getMonth() + 1, dd.getFullYear()];
        }
