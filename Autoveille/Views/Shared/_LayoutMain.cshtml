      $(function() {
          $("#chatOffLineMaxBar")
              .click(function () {
                  $("#chatOffLineMax").attr("style", "display: none");
                  $("#chatOffLineMin").attr("style", "visibility: visible");
              });
      });

      $(function () {
          $("#chatOffLine")
              .click(function () {
                  $("#chatOffLineMin").attr("style", "display: none");
                  $("#chatOffLineMax").attr("style", "visibility: visible");
              });
      });
      
      $(function () {
          $("#formSubmit").click(function () {
              $.ajax({
                  url: '@Url.Action("SendMessage", "Message")',
                  type: 'GET',
                  contentType: "application/json; charset=utf-8",
                  data: { Message:$("#txMessage").val() },
                    error: function () {
                    },
                    cache: false,
                    success: function (result) {
                        $('#chatText span')
                            .text(result == "Ok"
                                ? "Votre message a été envoyé avec success. Nous vous contacterons dès que possible. Vous pouvez nous envoyer un autre message. "
                                : "Une erreur est survenue pendant l'envoi du message. Vous pouvez ressayer plus tard. Nous vous contacterons dès que possible.");
                        $("#chatText").attr("style", "height: 65px;");
                        if (result == "Ok")
                        {
                            $("#txMessage").val("Message envoyé");
                        }                      
                        $("#txMessage").attr("style", "height: 195px;");
                        

                    }
                });
            });
      });


  </script>

 
