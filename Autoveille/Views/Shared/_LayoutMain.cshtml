   <script type="text/javascript">
      $(document).ready(function () {
          $(function () {
              jQuery.event.handle = jQuery.event.dispatch;
              $("#txMessage").text("");
          });
          
          var url = window.location;
         
          
          $('ul.nav li a').each(function () {
           
              if (this.href == url ) {
                  $("ul.nav li").each(function () {
                      if ($(this).hasClass("act")) {
                          $(this).removeClass("act");
                      }                    
                  });
                  
                  if ($(this).parent().attr("id") == "#liVentePrivee" || $(this).parent().attr("id") == "#liAutreListe"
                        || $(this).parent().attr("id") == "#liListesGenerees") {
                      $(this).css("color", "#840102");
                      $(this).parent().parent().siblings().css("color", "white");
                      $(this).parent().parent().siblings().addClass("act");
                  } else {
                      $("#liVentePrivee").css("color", "#333333");
                      $("#liAutreListe").css("color", "#333333");
                      $("liListesGenerees").css("color", "#333333");
                      $(this).parent().addClass('act');
                      $(this).css("color", "white");
                     
                  }
                  
              }
          });

      });

